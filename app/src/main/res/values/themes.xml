<resources>
    <!-- Base application theme. -->
    <style name="coreTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceHeadline1">@style/textHeadline1</item>
        <item name="textAppearanceHeadline2">@style/textHeadline2</item>
        <item name="textAppearanceHeadline3">@style/textHeadline3</item>
        <item name="textAppearanceHeadline4">@style/textHeadline4</item>
        <item name="textAppearanceHeadline5">@style/textHeadline5</item>
        <item name="textAppearanceHeadline6">@style/textHeadline6</item>
        <item name="textAppearanceBody1">@style/textCTA</item>
        <item name="textAppearanceBody2">@style/textParagraph</item>
        <item name="android:windowBackground">@color/bg_level_3_card</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="textHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/bookman_jf_pro_regular</item>
        <item name="android:fontFamily">@font/bookman_jf_pro_regular</item>
        <item name="android:textSize">@dimen/text_headline_1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_headline_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textHeadline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_headline_3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_headline_4</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_headline_5</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_headline_6</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textCTA" parent="textHeadline5">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="textParagraph" parent="textHeadline5">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ShapeAppearanceOverlay.Demo">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_28sdp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_28sdp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="minHeight">@dimen/_56sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">@dimen/_56sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_16dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_16dp</item>
        <item name="cornerSizeBottomRight">@dimen/_16dp</item>
        <item name="cornerSizeTopRight">@dimen/_16dp</item>
    </style>

    <style name="MyAlertDialogTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_24dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_24dp</item>
        <item name="cornerSizeBottomRight">@dimen/_24dp</item>
        <item name="cornerSizeTopRight">@dimen/_24dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--

        <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
            <item name="bottomSheetStyle">@style/AppModalStyle</item>
        </style>

        <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
            <item name="android:background">@drawable/rounded_dialog</item>
            <item name="behavior_peekHeight">800dp</item>
        </style>
    -->

    <style name="coreTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="behavior_peekHeight">800dp</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_24dp</item>
        <item name="cornerSizeTopLeft">@dimen/_24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editTextStyle">
        <item name="android:paddingStart">@dimen/_24dp</item>
        <item name="android:paddingEnd">@dimen/_24dp</item>
        <item name="android:paddingTop">@dimen/_24dp</item>
        <item name="android:paddingBottom">@dimen/_24dp</item>
    </style>

    <style name="textInputStyle">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_16dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_16dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/darkTeal</item>
        <item name="boxCollapsedPaddingTop">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/darkTeal</item>
    </style>

    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="tabTextAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="AlertDialogMy" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:windowNoTitle">true</item> <!--//delete this line if you need to show Title.-->
    </style>
</resources>